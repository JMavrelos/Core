<resources>

    <style name="AppTheme.CardView" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/card_radius</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">?colorSurface</item>
    </style>

    <style name="OverflowMenu" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="AppTheme.SearchStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/sh_toolbar_cursor</item>
    </style>

    <style name="AppTheme.Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="AppTheme.SpinnerItem" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/mtrl_text_btn_text_color_selector</item>
    </style>


    <style name="AppTheme.TextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?colorSecondary</item>
    </style>
</resources>